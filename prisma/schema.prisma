generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Rol {
  PACIENTE
  DOCTOR
  ADMIN
}

model User {
  id        Int  @id @default(autoincrement())
  email     String @unique
  nombre    String
  edad      Int?
  password  String?
  rol       Rol @default(PACIENTE)

  horaPaciente  HoraMedica[] @relation("PacienteHoras")
  horaDoctor    HoraMedica[] @relation("DoctorHoras")
}

model HoraMedica {
  id          Int      @id @default(autoincrement())
  fecha       DateTime @default(now())
  hora        Hora     @relation(fields: [horaId], references: [id])
  horaId      Int

  // paciente puede ser NULL cuando la hora est√° disponible
  paciente    User?    @relation("PacienteHoras", fields: [pacienteId], references: [id])
  pacienteId  Int?

  doctor      User     @relation("DoctorHoras", fields: [doctorId], references: [id])
  doctorId    Int
}

model Hora {
  id        Int      @id @default(autoincrement())
  start     DateTime
  end       DateTime
  horasMedicas HoraMedica[]
}